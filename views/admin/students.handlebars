
<div class="content">
    <div class="container-fluid">
        <div class="card col-md-3">
            <form method="get" action="/admin/students">
                <div class="form-group text-center">
                    <label class="student-label" for="studentNameAdmin">Student</label>
                        <select type="text" class="form-control" id="studentNameAdmin" aria-describedby="studentName" name="student">
                            {{#each students}}
                                <option value="{{{_id}}}">{{{username}}}</option>
                            {{/each}}
                        </select>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline-dark">SEARCH</button>
                </div>
            </form>
        </div>

      <div class="row">
        <div class="col-md-12">
          <div class="card ">
            <div class="card-header ">
              <h4 class="card-title">POSITIONS</h4>
            </div>
            <div class="card-body table-full-width table-responsive">
              <table class="table ">
                <thead>
                  <th>ASSET</th>
                  <th>FINAL</th>
                </thead>
                <tbody>
                  {{#each stockNames}}
                    {{#if finalValue}}
                      <tr>
                        <td>{{{stockName}}}</td>
                        <td>
                          {{#myEndedOffers ../closedBuyOffers ../closedSellOffers finalValue}}
                            {{{earning}}}
                          {{/myEndedOffers}}
                        </td>
                      </tr>
                    {{/if}}
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-header ">
                        <h4 class="card-title">PRICE HISTORY</h4>
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table ">
                            <thead>
                                <th>ASSET</th>
                                <th>Q</th>
                                <th>P</th>
                                <th>CREATED</th>
                                <th>COMPLETED</th>
                                <th>Offer Type</th>
                            </thead>
                            <tbody>
                            {{#each offers}}
                                <tr>
                                    <td>{{{asset}}}</td>
                                    <td>{{{q}}}</td>
                                    <td>{{{p}}}</td>
                                    <td>{{{dateCreated}}}</td>
                                    <td>{{{dateCompleted}}}</td>
                                    <td>{{{offerType}}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
