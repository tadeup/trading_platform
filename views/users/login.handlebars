<div class="container-fluid">
    <h1>Welcome</h1>
    <p>FGV Trading Platform </p>
</div>

<!---Form-->
<form method="post" action="/users/login">
    <div class="form-group">
        <label for="userEmail">Username</label>
        <input type="email" class="form-control" id="userEmail" aria-describedby="emailHelp" placeholder="Username" name="email">
        <small id="emailHelp" class="form-text text-muted">Your username can be found on the opening mail of the class.</small>
    </div>
    <div class="form-group">
        <label for="userPassword">Password</label>
        <input type="password" class="form-control" id="userPassword" placeholder="Password" name="password">
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-outline-dark">Submit</button>
    </div>
</form>